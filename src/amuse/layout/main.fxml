<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="amuse.controllers.ControllerMain"
          xmlns:fx="http://javafx.com/fxml">

    <TableView fx:id="twSongsList" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="songName" text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="songArtist" text="Artist">
                <cellValueFactory>
                    <PropertyValueFactory property="artist"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="songDuration" text="Duration">
                <cellValueFactory>
                    <PropertyValueFactory property="duration"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox>
         <padding>
             <Insets top="5"/>
         </padding>

        <Button fx:id="btnDownloadSelected" text="Download Selected" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnDownloadAll" text="Download All" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<HBox fx:controller="amuse.controllers.ControllerPlayer"
      xmlns:fx="http://javafx.com/fxml">

    <Button fx:id="btnPlay" text="Play" HBox.hgrow="ALWAYS"/>
    <Button fx:id="btnPause" text="Pause" HBox.hgrow="ALWAYS"/>
    <Button fx:id="btnStop" text="Stop" HBox.hgrow="ALWAYS"/>
    <Label fx:id="lblCurrentTrackTime"/>
    <Slider fx:id="sldSongProgressSlider" showTickLabels="true" showTickMarks="true" HBox.hgrow="ALWAYS"/>
    <Label fx:id="lblTrackTotalTime"/>
</HBox>